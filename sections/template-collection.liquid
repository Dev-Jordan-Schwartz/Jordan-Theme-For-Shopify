<div class="px-4 py-8">
  {% paginate collection.products by 6 %}
    <h1 class="text-3xl text-center mb-6 font-semibold">{{ collection.title }}</h1>
    <div class="max-w-6xl mx-auto">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        {% for product in collection.products %}
          <div class="w-full py-6 px-3">
            <div class="border bg-white shadow-lg rounded-lg overflow-hidden">
              <a href="{{ product.url }}">
                {% if product.featured_image %}
                  <div class="h-80 overflow-hidden">
                    <img
                      class="w-full h-full object-cover"
                      src="{{ product.featured_image | img_url: 'large' }}"
                      alt="{{ product.featured_image.alt }}">
                  </div>
                {% else %}
                  {{ 'product-1' | placeholder_svg_tag: 'w-full h-full object-cover b-gray-100' }}
                {% endif %}
              </a>
              <div class="flex flex-col p-4">
                <span class="text-sm text-gray-500">{{ product.vendor }}</span>
                <a class="text-gray-700 uppercase font-medium" href="{{ product.url }}">{{ product.title }}</a>
                <p class="test-gray-500">{{ product.price | money }}</p>
              </div>

            </div>
          </div>
        {% else %}
          <p>There are no products currently located in this collection.</p>
        {% endfor %}
      </div>
    </div>

    {% render 'pagination', pagination: paginate %}
  {% endpaginate %}
  <div class="justify-center m-auto 2xl:w-2/4 lg:w-3/4 sm:w-full">{{ collection.description }}</div>
</div>