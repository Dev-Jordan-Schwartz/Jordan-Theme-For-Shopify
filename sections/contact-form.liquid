<div class="flex flex-col items-center my-8">
    {% form 'contact' %}

        <label for="contact_name">Full Name</label>
        <input type="text" name="contact[name]" id="contact_name">

        <label for="contact_email">Email Address</label>
        <input type="email" name="contact[email]" id="contact_email">

        <label for="contact_subject">Enter your subject</label>
        <input type="subject" name="contact[subject]" id="contact_subject">

        <label for="contact_message">Type your message</label>
        <textarea for="contact[body]" id="contact_message"></textarea>

        <input type="submit" value="Submit message">

    {% endform %}
</div>

{% schema %}
    {
        "name": "Contact Form",
        "presets": [
            {
                "name": "Contact Form"
            }
        ]
    }
{% endschema %}