<link rel="stylesheet" href="{{ 'hero.css' | asset_url }}">
  <div class="hero-container">
    <div class="hero-text">
      <h1>{{ section.settings.title }}</h1>
      <p>{{ section.settings.description }}</p>
    </div>
  </div>



{% schema %}
  {
    "name": "Hero Section",
    "class": "hero-section",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Test Text"
      }, {
        "type": "html",
        "label": "Description",
        "id": "description",
        "label": "Test"
      }, {
        "type": "image_picker",
        "label": "Image",
        "id": "image"
      }
    ],
    
    "presets": [
      {
        "name": "Custom Hero",
        "category": "Advanced layout"
      }
    ]
  }
{% endschema %}